    <!-- SDK DE PAYPAL -->
    <script src="https://www.paypal.com/sdk/js?client-id=AcJXJ9Yi9sZ9diQphARuuoDx3oTHJnPNElyRGaTGrSHI-4zB2ukj2pfgM_t8a0Ijkaq9Oco_R4ySUhEq&currency=USD"></script>

    <script>
        let amount = 25;
        let planName = "5 Publicaciones";

        function selectPlan(p, n, el) {
            amount = p;
            planName = n;
            document.getElementById('resumen-nombre').innerText = n;
            document.getElementById('resumen-precio').innerText = `$${p}.00 USD`;
            document.querySelectorAll('.plan-btn').forEach(b => b.classList.remove('active-card'));
            el.classList.add('active-card');
            renderButtons();
        }

        function renderButtons() {
            const container = document.getElementById('paypal-button-container');
            container.innerHTML = ''; // Limpiar
            
            paypal.Buttons({
                style: {
                    layout: 'vertical',
                    color:  'blue',
                    shape:  'pill',
                    label:  'pay',
                    height: 50
                },
                createOrder: function(data, actions) {
                    return actions.order.create({
                        purchase_units: [{
                            description: "Servicio Publicitario: " + planName,
                            amount: {
                                currency_code: 'USD',
                                value: amount.toString()
                            }
                        }]
                    });
                },
                onApprove: function(data, actions) {
                    return actions.order.capture().then(function(details) {
                        document.getElementById('paypal-button-container').classList.add('hidden');
                        document.getElementById('success-ui').classList.remove('hidden');
                        console.log('Pago capturado de:', details.payer.name.given_name);
                    });
                }
            }).render('#paypal-button-container');
        }

        // Carga inicial
        window.onload = renderButtons;
    </script>
